generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url = env("DATABASE_URL")
  relationMode = "prisma"
}

model User{
  id          Int    @id @default(autoincrement())
  uuid      String @unique
  name        String
  profileImageUrl String
  chats      Chat[]
}

model Room{
  id          Int    @id @default(autoincrement())
  name        String
  description String
  chats      Chat[]
  createdAt DateTime @default(now())
}

model Chat{
  id          Int    @id @default(autoincrement())
  message     String
  room      Room @relation(fields: [roomId], references: [id])
  roomId      Int
  user      User @relation(fields: [userId], references: [id])
  userId      Int
  createdAt DateTime @default(now())

  @@index([roomId])
  @@index([userId])
}